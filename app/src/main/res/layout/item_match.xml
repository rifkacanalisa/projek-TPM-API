<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#bacdff"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_match_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="2021-06-10"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/iv_match_hometeam"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_baseline_sports_basketball_24" />

            <TextView
                android:id="@+id/tv_match_hometeam_name"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_match_date"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_match_hometeam"
                android:text="Milwaukee Bucks"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_match_hometeam_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vs"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/iv_match_hometeam"
                android:text="180"
                android:textSize="28sp"
                android:textStyle="bold|italic" />


            <TextView
                android:id="@+id/vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_match_date"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/tv_match_awayteam_name"
                android:layout_toRightOf="@id/tv_match_hometeam_name"
                android:text="VS"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_match_awayteam_name"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_match_date"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/iv_match_awayteam"
                android:text="Milwaukee Bucks"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_match_awayteam_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vs"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                android:layout_toStartOf="@id/iv_match_awayteam"
                android:text="180"
                android:textSize="28sp"
                android:textStyle="bold|italic" />


            <ImageView
                android:id="@+id/iv_match_awayteam"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_baseline_sports_basketball_24" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>